{
  "productName": "ChatApp",
  "version": "0.3.1",
  "identifier": "com.chatapp.dev",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../src"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
    "resources": ["resources/media/*"],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "android": {
      "minSdkVersion": 24
    }
  },
  "app": {
    "windows": [
      {
        "title": "Chat App",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**"]
      },
      "csp": {
        "default-src": "'self'",
        "connect-src": [
          "'self'",
          "https:",
          "http:",
          "https://api.openai.com",
          "https://api.anthropic.com",
          "https://*.openai.com",
          "http://localhost:*",
          "http://127.0.0.1:*"
        ],
        "img-src": "'self' data: https: http: blob: asset: tauri: file:",
        "media-src": "'self' data: https: http: blob: asset: tauri: file:",
        "style-src": "'self' 'unsafe-inline' https: http: data: blob:",
        "script-src": "'self' 'unsafe-inline' 'unsafe-eval' https: http: data: blob:",
        "frame-src": "'self' data: blob:",
        "child-src": "'self' data: blob:",
        "font-src": "'self' data: https: http:"
      }
    }
  }
}
